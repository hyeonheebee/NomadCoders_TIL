extends ../layout
include ../mixins/video
block content
  //- div 
  //-   img(src=`/${user.avatarUrl}`,width=200,height=200)
  //- nav  
  //-   ul  
  //-     li=user.username 
  //-     li=user.nickname 
  //-     hr -//

  div.profile__data
    if loggeduser.avatarUrl === ""
       span 
          i.fas.fa-smile.fa-5x
    else  
       img(src=user.avatarUrl).avatar
    span=user.username
    span=user.nickname
    a(href=`/users/${user._id}/edit`) &rarr; Edit your Profile 
  div.video-grid
    each video in user.videos 
      +video(video)
    else
      span.empty__message sorry you don't have any video
  hr
  span My Comments
  div.comment-grid
    each comment in user.comments   
      span=comment.text
        a(href=`/videos/${String(comment.videos)}`) &rarr; See this Video
    else  
      span.empty__message sorry you don't have any comment

      