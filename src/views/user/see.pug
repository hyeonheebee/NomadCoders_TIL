extends ../layout
include ../mixins/video
block content

  div 
    img(src=`/${user.avatarUrl}`,width=200,height=200)
  nav  
    ul  
      li=user.username 
      li=user.nickname 
      hr
      a(href=`/users/${user._id}/edit`) &rarr; Edit your Profile 
      hr
  each video in user.videos 
    +video(video)
  else
   h3 sorry you don't have any video
