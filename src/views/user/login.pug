extends ../layout
block content 
  if errorMessage 
    h2 Please Login Again
    h3 ERROR | #{errorMessage} 

  form(method="POST")
    input(name="username",type="text", placeholder="username")
    input(name="password",placeholder="put your password",type="password")
    input(type="submit",value="Join")

    hr
    a(href="https://github.com/login/oauth/authorize?client_id=9574da7f78fbbb933186") continue with github account &rarr;
