extends ../layout


block content
  h3 #{video.title}
  p #{video.summary}

  div#videoContainer(data-id=video._id )
    video(src=`/${video.fileUrl}`)
    div#videoControls.videoControls
      div.videoControls__play
        span#play.videoControls__playBtn
           i.fas.fa-play
        div.videoControls__time
          span#currentTime 00:00 
          span / 
          span#wholeTime 00:00
      input(type="range",value="0",min="0",step="0.5")#timeLine
      div.videoControls__volume
          input(type="range",value="0.5", min="0",max="1",step="0.01")#volume
          span#mute
            i.fas.fa-volume-up
      div 
        sapn#fullScreen 
            i.fas.fa-expand
  ul
    each genre in video.genres 
     span #{genre} 
  ul
    each tag in video.hashtags 
      span #{tag}    
  br
  small Creator | #{String(video.owner.username)} / #{String(video.owner.nickname)}
      //-아바타넣기
  br
  small #{video.views}/5
  br
  small #{video.createdDate}
  hr



  if loggedIn          
    div.video__post-comments
        form.video__comment-form#commentForm
          textarea( cols="30", rows="10",placeholder="give some comments now ")
          button Post Comment    
  div.video__comments
    ul  
      each comment in video.comments.reverse()
        li.video__comment
          i.fas.fa-comment 
          | #{comment.text}

  if loggeduser._id  === String(video.owner.id)
    a(href=`${video.id}/edit`) Edit Video &rarr;
    br
    a(href=`${video.id}/delete`) Delete Video &rarr;
block scripts 
  script(src="/static/js/videoPlayer.js")
  if loggedIn
    script(src="/static/js/comment.js")
