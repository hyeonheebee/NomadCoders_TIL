extends base.pug

block content   
  div
    video(src="/"+video.fileUrl, controls)
    p=video.description
    small=video.createdAt
  div 
    small Uploaded by 
     a(href=`/users/${video.owner.id}`) #{video.owner.name}
    br
    span #{video.views} #{video.views === 1 ? "view" :"views"}
    span  #{video.comments} comments
    hr
  if String(loggedInUser._id) === String(video.owner)
      a(href=`${video.id}/edit`) Edit Video &rarr;
      br
      a(href=`${video.id}/delete`) Delete Video &rarr;