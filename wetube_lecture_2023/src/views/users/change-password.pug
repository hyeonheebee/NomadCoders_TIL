extends ../base
block content
  if(errorMessage)
    span=errorMessage
  form(method="POST")
    input(name="oldPassword",placeholder="Old password", type = "password", required)
    input(name="newPassword",placeholder="New password", type = "password", required)
    input(name="validPassword",placeholder="New password Confirmation", type = "password", required)
    input(type="submit",value="Update Password")